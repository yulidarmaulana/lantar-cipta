---
interface Industry {
  title: string;
  description: string;
  iconGradient: string;
  iconPath: string;
  features: string[];
}

const industries: Industry[] = [
  {
    title: "Software Development",
    description:
      "Menyediakan pengembangan dan dukungan pada sistem informasi, berdasarkan pada kebutuhan yang dikumpulkan dan didokumentasikan oleh sistem analis.",
    iconGradient: "from-green-300 to-green-500",
    iconPath: "M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4",
    features: [
      "Sistem Informasi Manajemen",
      "Pengembangan Aplikasi Berbasis Andriod",
      "Sistem Informasi Kediklatan",
    ],
  },
  {
    title: "Multimedia Production",
    description:
      "Menyediakan dukungan inovasi dan kreasi bidang layanan konten multimedia dalam berbagai bentuk guna mempermudah tersampaikannya informasi.",
    iconGradient: "from-green-300 to-green-500",
    iconPath:
      "M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z",
    features: [
      "Virtual Panorama",
      "Media Pembelajaran berbasis Multimedia",
      "Pembuatan Video Profile",
    ],
  },
  {
    title: "Perencanaan Teknik dan Pemetaan",
    description:
      "Menyediakan bantuan teknis, kajian, dan perencanaan terkait keruangan (spasial).",
    iconGradient: "from-green-300 to-green-500",
    iconPath: "M9 20l-6-4V4l6 4m0 12l6-4m-6 4V8m6 8l6-4V4l-6 4m0 12V8",
    features: [
      "Perencanaan dan Pemetaan Tata Ruang",
      "Teknik Sipil Non-Konstruksi",
      "Rancang dan Desain Arsitektur",
    ],
  },
];

const checkmarkPath =
  "M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z";
---

<section class="py-24 bg-linear-to-b from-slate-50 to-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <div
        class="inline-block px-4 py-2 mb-4 bg-linear-to-r from-green-300 to-green-600 text-white text-sm font-semibold rounded-full"
      >
        Our Services
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">
        Driving Digital Transformation Through IT Consulting
      </h2>
      <p class="text-xl text-slate-600 max-w-5xl mx-auto leading-relaxed">
        With a robust suite of products IT Consultant. We are a company with a
        full dedication to contribute.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        industries.map((industry) => (
          <div class="group bg-[#FFFAEB] rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all hover:-translate-y-2 border border-slate-100">
            <div
              class={`w-16 h-16 rounded-xl bg-linear-to-br ${industry.iconGradient} flex items-center justify-center mb-6 group-hover:scale-110 transition-transform`}
            >
              <svg
                class="w-8 h-8 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d={industry.iconPath}
                />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-slate-900 mb-3">
              {industry.title}
            </h3>
            <p class="text-slate-600 leading-relaxed mb-4 text-justify">
              {industry.description}
            </p>
            <ul class="space-y-2 text-sm text-slate-600">
              {industry.features.map((feature, index) => (
                <li class="flex items-center">
                  <span class="flex items-center justify-center w-6 h-6 rounded-full bg-teal-100 text-teal-600 font-semibold text-xs mr-3 flex-shrink-0">
                    {index + 1}
                  </span>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <!-- Bottom CTA -->
    <div class="text-start mt-12">
      <a
        href="/use-cases"
        class="inline-flex items-center px-4 py-2 text-base font-semibold text-white bg-linear-to-r from-[#A9CE3C] to-[#8FAF33]
           hover:from-[#96B835] hover:to-[#7E9E2E]
           shadow-md shadow-[#A9CE3C]/40
           hover:shadow-lg rounded-lg shadow-lg hover:shadow-xl transition-all group"
      >
        View More
        <svg
          class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
