---
import Button from "../ui/Button.astro";
---

<section
  class="relative overflow-hidden bg-linear-to-r from-primary-800 to-secondary-700 text-white py-20"
>
  <!-- Background pattern -->
  <div class="absolute inset-0 opacity-10">
    <div
      class="absolute inset-0"
      style="background-image: linear-gradient(45deg, white 25%, transparent 25%), linear-gradient(-45deg, white 25%, transparent 25%), linear-gradient(45deg, transparent 75%, white 75%), linear-gradient(-45deg, transparent 75%, white 75%); background-size: 60px 60px; background-position: 0 0, 0 30px, 30px -30px, -30px 0px;"
    >
    </div>
  </div>

  <div class="container mx-auto relative z-10">
    <div class="max-w-4xl mx-auto text-center space-y-6 animate-fadeInUp">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight">
        Ready to Grow Your Career?
      </h2>
      <p class="text-lg md:text-xl text-primary-100 max-w-2xl mx-auto">
        We are building the future of IT solutions. Are you ready to grow with
        us and make an impact?
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center pt-6">
        <Button
          href="/career"
          size="lg"
          class="bg-[#A9CE3C]! text-white! hover:bg-[#96B835]! shadow-lg shadow-[#A9CE3C]/30 transition-all duration-300"
        >
          Join Our Team
        </Button>
        <Button
          href="/facilities"
          size="lg"
          variant="outline"
          class="border-white! text-white! hover:bg-white/10!"
        >
          View Our Facilities
        </Button>
      </div>

      <!-- Trust indicators -->
      <div
        class="grid grid-cols-2 md:grid-cols-4 gap-8 pt-12 max-w-4xl mx-auto"
      >
        <div class="text-center">
          <div class="text-3xl font-bold text-secondary-300">25+</div>
          <div class="text-sm text-primary-200 mt-1">Years Experience</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-secondary-300">15</div>
          <div class="text-sm text-primary-200 mt-1">Global Facilities</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-secondary-300">ISO 9001</div>
          <div class="text-sm text-primary-200 mt-1">Certified</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-secondary-300">24/7</div>
          <div class="text-sm text-primary-200 mt-1">Support Available</div>
        </div>
      </div>
    </div>
  </div>
</section>
