---
import { Image } from "astro:assets";
import Button from "../ui/Button.astro";
import warehouseBgImg from "@assets/photo-1553413077-190dd305871c.jpg";
---

<section class="relative py-32 overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <Image
      src={warehouseBgImg}
      alt="Modern warehouse operations"
      class="w-full h-full object-cover"
      width={2070}
      height={1380}
    />
    <div
      class="absolute inset-0 bg-linear-to-r from-blue-900/95 to-teal-900/95"
    >
    </div>
  </div>

  <!-- Content -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="max-w-4xl mx-auto text-center text-white">
      <div
        class="inline-block px-4 py-2 mb-6 bg-white/10 backdrop-blur-sm text-white text-sm font-semibold rounded-full"
      >
        Get Started Today
      </div>
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
        Ready to Optimize with <span
          class="text-transparent bg-clip-text bg-linear-to-r from-blue-400 to-teal-400"
          >AstroFlow</span
        >?
      </h2>
      <p
        class="text-xl md:text-2xl text-slate-200 mb-12 max-w-2xl mx-auto leading-relaxed"
      >
        Partner with industry leaders. Get a customized logistics solution
        designed for your success and accelerate your growth.
      </p>

      <div class="flex flex-col sm:flex-row gap-6 justify-center mb-16">
        <a
          href="/career"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-[#A9CE3C] hover:bg-[#96B835] rounded-lg shadow-2xl hover:shadow-3xl transition-all group"
        >
          Join Our Team
          <svg
            class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        <a
          href="/facilities"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white border-2 border-white hover:bg-white/10 rounded-lg shadow-2xl hover:shadow-3xl transition-all group"
        >
          Tour Our Facilities
          <svg
            class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>

      <!-- Trust indicators -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto">
        <div
          class="backdrop-blur-sm bg-white/10 rounded-xl p-6 hover:bg-white/20 transition-all border border-white/10 hover:border-white/30 group"
        >
          <div
            class="text-3xl md:text-4xl font-bold mb-2 text-transparent bg-clip-text bg-linear-to-r from-white to-blue-200"
          >
            25+
          </div>
          <div
            class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors"
          >
            Years Experience
          </div>
        </div>
        <div
          class="backdrop-blur-sm bg-white/10 rounded-xl p-6 hover:bg-white/20 transition-all border border-white/10 hover:border-white/30 group"
        >
          <div
            class="text-3xl md:text-4xl font-bold mb-2 text-transparent bg-clip-text bg-linear-to-r from-white to-blue-200"
          >
            ISO 9001
          </div>
          <div
            class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors"
          >
            Certified
          </div>
        </div>
        <div
          class="backdrop-blur-sm bg-white/10 rounded-xl p-6 hover:bg-white/20 transition-all border border-white/10 hover:border-white/30 group"
        >
          <div
            class="text-3xl md:text-4xl font-bold mb-2 text-transparent bg-clip-text bg-linear-to-r from-white to-blue-200"
          >
            24/7
          </div>
          <div
            class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors"
          >
            Support
          </div>
        </div>
        <div
          class="backdrop-blur-sm bg-white/10 rounded-xl p-6 hover:bg-white/20 transition-all border border-white/10 hover:border-white/30 group"
        >
          <div
            class="text-3xl md:text-4xl font-bold mb-2 text-transparent bg-clip-text bg-linear-to-r from-white to-blue-200"
          >
            Global
          </div>
          <div
            class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors"
          >
            Network
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
