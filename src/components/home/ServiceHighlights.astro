---
import FeatureShowcase from "../react/FeatureShowcase";

const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, "");
---

<section class="py-24 bg-slate-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <div
        class="inline-block px-4 py-2 mb-4 bg-linear-to-r from-green-300 to-green-600 text-white text-sm font-semibold rounded-full"
      >
        Our Services
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">
        We are company with a full dedication to <span
          class="text-transparent bg-clip-text bg-linear-to-r from-green-300 to-green-600"
          >contribute</span
        >
      </h2>
      <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
        With a robust suite of products IT Consultant. We are a company with a
        full dedication to contribute.
      </p>
    </div>

    <FeatureShowcase client:load />

    <!-- Bottom CTA -->
    <div class="text-start mt-12">
      <a
        href={`${baseUrl}/use-cases`}
        class="inline-flex items-center px-8 py-2 text-base font-semibold text-white bg-linear-to-r from-[#A9CE3C] to-[#8FAF33]
           hover:from-[#96B835] hover:to-[#7E9E2E]
           rounded-lg shadow-md shadow-[#A9CE3C]/40
           hover:shadow-lg transition-all duration-300"
      >
        Explore All Capabilities
        <svg
          class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
