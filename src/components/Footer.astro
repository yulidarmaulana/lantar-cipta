---
import { NAVIGATION, SOCIAL_LINKS, SITE } from "@config/site";
import { Package, Linkedin, Twitter, Facebook } from "lucide-react";

const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, "");
---

<footer class="bg-[#0D625F] text-slate-300">
  <div class="container mx-auto px-4 py-16 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-4">
      <!-- Company Info -->
      <div class="lg:col-span-1 space-y-6">
        <a href={`${baseUrl}/`} class="flex items-center space-x-3 group">
          <img
            src={`${baseUrl}/favicon-lcm.png`}
            alt="Lantar Cipta Media Logo"
            class="h-10 w-10 transition-transform group-hover:scale-110"
          />
          <span class="text-2xl font-bold text-white">
            Lantar Cipta Media
          </span>
        </a>
        <p class="text-sm text-slate-400 leading-relaxed max-w-xs">
          {SITE.description}
        </p>
        <div class="flex space-x-4">
          <a
            href={SOCIAL_LINKS.linkedin}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-[#8CC64C] text-white hover:bg-[#8CC64C]/50 hover:text-white transition-all"
            aria-label="LinkedIn"
          >
            <Linkedin className="w-5 h-5" />
          </a>
          <a
            href={SOCIAL_LINKS.twitter}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-[#8CC64C] text-white hover:bg-[#8CC64C]/50 hover:text-white transition-all"
            aria-label="Twitter"
          >
            <Twitter className="w-5 h-5" />
          </a>
          <a
            href={SOCIAL_LINKS.facebook}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-[#8CC64C] text-white hover:bg-[#8CC64C]/50 hover:text-white transition-all"
            aria-label="Facebook"
          >
            <Facebook className="w-5 h-5" />
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3
          class="text-sm font-semibold uppercase tracking-wider text-white mb-6"
        >
          Links
        </h3>
        <ul class="space-y-3">
          {
            NAVIGATION.map((item) => (
              <li>
                <a
                  href={
                    item.href.startsWith("/")
                      ? `${baseUrl}${item.href}`
                      : item.href
                  }
                  class="text-sm text-slate-100 hover:text-green-400 transition-colors inline-flex items-center group"
                >
                  <span class="w-0 group-hover:w-2 h-0.5 bg-green-400 transition-all mr-0 group-hover:mr-2" />
                  {item.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3
          class="text-sm font-semibold uppercase tracking-wider text-white mb-6"
        >
          Our Services
        </h3>
        <ul class="space-y-3">
          <li>
            <a
              href={`${baseUrl}/capabilities`}
              class="text-sm text-slate-100 hover:text-green-400 transition-colors inline-flex items-center group"
            >
              <span
                class="w-0 group-hover:w-2 h-0.5 bg-green-400 transition-all mr-0 group-hover:mr-2"
              ></span>
              Software Development
            </a>
          </li>
          <li>
            <a
              href={`${baseUrl}/capabilities`}
              class="text-sm text-slate-100 hover:text-green-400 transition-colors inline-flex items-center group"
            >
              <span
                class="w-0 group-hover:w-2 h-0.5 bg-green-400 transition-all mr-0 group-hover:mr-2"
              ></span>
              Multimedia Production
            </a>
          </li>
          <li>
            <a
              href={`${baseUrl}/capabilities`}
              class="text-sm text-slate-100 hover:text-green-400 transition-colors inline-flex items-center group"
            >
              <span
                class="w-0 group-hover:w-2 h-0.5 bg-green-400 transition-all mr-0 group-hover:mr-2"
              ></span>
              Networking Server
            </a>
          </li>
          <li>
            <a
              href={`${baseUrl}/capabilities`}
              class="text-sm text-slate-100 hover:text-green-400 transition-colors inline-flex items-center group"
            >
              <span
                class="w-0 group-hover:w-2 h-0.5 bg-green-400 transition-all mr-0 group-hover:mr-2"
              ></span>
              Graphics Design
            </a>
          </li>
          <li>
            <a
              href={`${baseUrl}/capabilities`}
              class="text-sm text-slate-100 hover:text-green-400 transition-colors inline-flex items-center group"
            >
              <span
                class="w-0 group-hover:w-2 h-0.5 bg-green-400 transition-all mr-0 group-hover:mr-2"
              ></span>
              Technology Consulting
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3
          class="text-sm font-semibold uppercase tracking-wider text-white mb-6"
        >
          Get in Touch
        </h3>
        <ul class="space-y-3 text-sm">
          <li>
            <span>Location :</span>
            <br />
            <a
              href={`${baseUrl}/career`}
              class="text-slate-100 hover:text-green-400 transition-colors inline-flex items-center group"
            >
              <span
                class="w-0 group-hover:w-2 h-0.5 bg-green-400 transition-all mr-0 group-hover:mr-2"
              ></span>
              JL. Rajawali 1 No. 2 Manahan, Banjarsari, Surakarta.
            </a>
          </li>
          <li>
            <span>Email :</span><br />
            <a
              href={`${baseUrl}/facilities`}
              class="text-slate-100 hover:text-green-400 transition-colors inline-flex items-center group"
            >
              <span
                class="w-0 group-hover:w-2 h-0.5 bg-green-400 transition-all mr-0 group-hover:mr-2"
              ></span>
              phicos.id@gmail.com
            </a>
          </li>
          <li>
            <span>Phone :</span><br />
            <a
              href={`${baseUrl}/documentation`}
              class="text-slate-100 hover:text-green-400 transition-colors inline-flex items-center group"
            >
              <span
                class="w-0 group-hover:w-2 h-0.5 bg-green-400 transition-all mr-0 group-hover:mr-2"
              ></span>
              (0271) 7462445
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-16 pt-8 border-t border-slate-800">
      <div
        class="flex flex-col md:flex-row items-center justify-between space-y-4 md:space-y-0"
      >
        <p class="text-sm text-slate-100">
          &copy; {new Date().getFullYear()}
          {SITE.author}. All rights reserved.
        </p>
        <div class="flex items-center space-x-6 text-sm">
          <a
            href={`${baseUrl}/`}
            class="text-slate-100 hover:text-green-400 transition-colors"
          >
            Privacy Policy
          </a>
          <span class="text-slate-700">•</span>
          <a
            href={`${baseUrl}/`}
            class="text-slate-100 hover:text-green-400 transition-colors"
          >
            Terms of Service
          </a>
          <span class="text-slate-700">•</span>
          <a
            href={`${baseUrl}/`}
            class="text-slate-100 hover:text-green-400 transition-colors"
          >
            Cookie Policy
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
