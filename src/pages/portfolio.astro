---
import BaseLayout from "@layouts/BaseLayout.astro";
import Section from "@components/ui/Section.astro";
import Button from "@components/ui/Button.astro";
import PortfolioGrid from "@components/react/PortfolioGrid";
import { Image } from "astro:assets";

import heroBgImg from "@assets/background-hero-lantar.jpg";
---

<BaseLayout title="Portofolio - Lantar Cipta Media">
  <!-- Hero Section -->
  <section
    class="relative h-[40vh] min-h-[400px] flex items-center overflow-hidden"
  >
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0">
      <Image
        src={heroBgImg}
        alt="Industry solutions and use cases"
        class="w-full h-full object-cover"
        width={2070}
        height={1380}
      />
      <div
        class="absolute inset-0 bg-linear-to-l from-[#8BBA50]/90 via-[#8BBA50]/60 to-slate-900/80"
      >
      </div>
    </div>

    <!-- Content -->
    <div
      class="container mx-auto relative z-10 px-4"
      data-astro-cid-7boucb6x=""
    >
      <div
        class="flex items-center gap-4 text-white mb-4 uppercase tracking-widest text-sm font-bold animate-fade-in"
        data-astro-cid-7boucb6x=""
      >
        <!-- <span class="w-12 h-[2px] bg-[#A9CE3C]"></span> -->
        <div
          class="inline-flex items-center px-4 py-2 mb-6 bg-linear-to-r from-[#8BBA50] to-[#8BBA50]/60 text-white text-sm font-semibold rounded-full shadow-lg backdrop-blur-sm"
          data-astro-cid-7boucb6x=""
        >
          <svg
            class="w-4 h-4 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            data-astro-cid-7boucb6x=""
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
              data-astro-cid-7boucb6x=""></path>
          </svg>
          Comprehensive Resource Center
        </div>
      </div>
      <h1
        class="text-4xl md:text-6xl font-bold mb-6 text-white"
        data-astro-cid-7boucb6x=""
      >
        Our Portofolio
      </h1>
      <p
        class="text-xl text-slate-300 max-w-2xl leading-relaxed"
        data-astro-cid-7boucb6x=""
      >
        Kumpulan hasil karya dan inovasi kami dalam menghadirkan solusi
        teknologi terbaik bagi setiap mitra dan client.
      </p>
    </div>
  </section>

  <!-- Portfolio Section -->
  <Section background="gray" id="portfolio-grid">
    <PortfolioGrid client:load />
  </Section>

  <!-- CTA Section -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4 text-center">
      <div
        class="max-w-3xl mx-auto bg-linear-to-br from-[#0D625F] to-[#084542] rounded-3xl p-12 shadow-2xl relative overflow-hidden"
      >
        {/* Background Accent */}
        <div
          class="absolute -top-12 -right-12 w-48 h-48 bg-[#A9CE3C]/10 rounded-full blur-3xl"
        >
        </div>
        <div
          class="absolute -bottom-12 -left-12 w-48 h-48 bg-[#A9CE3C]/10 rounded-full blur-3xl"
        >
        </div>

        <div class="relative z-10">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
            Mulai Proyek Anda Bersama Kami
          </h2>
          <p class="text-green-50/80 text-lg mb-10 leading-relaxed">
            Siap untuk mentransformasi ide Anda menjadi solusi digital yang
            nyata? Tim ahli kami siap membantu setiap langkah perjalanan Anda.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <Button
              href="/career"
              size="lg"
              class="bg-[#A9CE3C] hover:bg-[#96B835] text-white!"
            >
              Hubungi Kami
            </Button>
            <Button
              href="/about"
              variant="outline"
              size="lg"
              class="border-white! text-white! hover:bg-white/10!"
            >
              Tentang Kami
            </Button>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
