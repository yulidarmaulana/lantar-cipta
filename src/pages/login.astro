---
import AuthLayout from "../layouts/AuthLayout.astro";
import LoginForm from "../components/react/LoginForm";

const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, "");
---

<AuthLayout
  title="Login - Lantar Cipta Media"
  description="Login to your Lantar Cipta Media account"
>
  <section
    class="flex-1 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8"
  >
    <div class="max-w-md w-full flex flex-col items-center">
      <!-- Login Form Card -->
      <LoginForm client:load />

      <!-- Back to Home -->
      <div class="text-center mt-8">
        <a
          href={`${baseUrl}/`}
          class="inline-flex items-center text-sm font-medium text-white/80 hover:text-white transition-colors bg-white/10 px-4 py-2 rounded-full backdrop-blur-sm border border-white/20"
        >
          <svg
            class="w-4 h-4 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to home
        </a>
      </div>
    </div>
  </section>

  <script>
    // Password toggle functionality - Handled in React component now
  </script>
</AuthLayout>
