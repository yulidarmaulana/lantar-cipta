---
import BaseLayout from "../layouts/BaseLayout.astro";
import LoginForm from "../components/react/LoginForm";

const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, "");
---

<BaseLayout
  title="Login - Lantar Cipta Media"
  description="Login to your Lantar Cipta Media account"
>
  <section
    class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-linear-to-br from-slate-50 via-blue-50 to-teal-50"
  >
    <div class="max-w-md w-full space-y-8">
      <!-- Logo and Header -->
      <div class="text-center">
        <img
          src={`${baseUrl}/favicon-lcm.png`}
          alt="Lantar Cipta Media Logo"
          class="mx-auto h-16 w-16 mb-4"
        />
        <h2 class="text-3xl font-bold text-slate-900 mb-2">
          Welcome Lantar Cipta Media
        </h2>
        <p class="text-slate-600">Sign in to your account to continue</p>
      </div>

      <!-- Login Form Card Island -->
      <LoginForm client:load />

      <!-- Back to Home -->
      <div class="text-center mt-6">
        <a
          href={`${baseUrl}/`}
          class="inline-flex items-center text-sm text-slate-600 hover:text-slate-900 transition-colors"
        >
          <svg
            class="w-4 h-4 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to home
        </a>
      </div>
    </div>
  </section>

  <script>
    // Password toggle functionality - Handled in React component now
  </script>
</BaseLayout>
